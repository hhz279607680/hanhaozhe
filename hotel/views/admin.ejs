<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <script src="/javascripts/jquery.min.js"></script>
</head>

<body>
    <input id="q1" type="text" placeholder="1">
    <input id="q2" type="text" placeholder="2">
    <input id="q3" type="text" placeholder="3">
    <button id="OK">提交</button>
    <button id="mod">获取所有管理数据</button>
    <button id="xiugai">修改</button>
</body>
<script>
    //管理员的新增
    $('#OK').on('click', function () {
        $.ajax({
            url: '/API/admin/admin_add',
            type: 'post',
            data: {
                'UserName': $('#q1').val(),
                'password': $('#q2').val(),
                'phonenum': $('#q3').val()
            },
            success: function (e) {
                alert('注册成功');
                $('body').html(e);
                debugger
            },
            error: function (e) {
                debugger
            }
        })
    })
    //管理员的查询信息
    $('#mod').on('click', function () {
        $.ajax({
            url: '/API/admin/admin_select',
            type: 'post',
            success: function (e) {
                var obj = JSON.parse(e);
                $('body').html(obj);
            },
            error: function (e) {
                debugger;
            }
        })
    })
    $('#xiugai').on('click', function () {
        //根据管理员ID去修改密码，在这里默认ID为1，前提数据库必须有数据
        $.ajax({
            url: '/API/admin/select_ID',
            type: 'post',
            data: {
                'ID': 1
            },
            success: function (e) {
                debugger
            },
            error: function (e) {
                debugger
            }
        })
    })
</script>
